<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:background="#fcfcfc"
            android:id="@+id/li">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:padding="10dp"
                    android:clickable="true"
                    app:cardCornerRadius="10dp"
                    android:background="#7DB65B"
                    android:foreground="?android:selectableItemBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:background="#7DB65B">
                        <ImageView
                            android:layout_marginTop="20dp"
                            android:layout_width="94dp"
                            android:layout_height="94dp"
                            android:src="@drawable/ic_add"

                            android:layout_gravity="center"
                            android:background="#7DB65B"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginTop="3dp"
                            android:text="Find a Hosiptal"
                            android:textColor="#fcfcfc"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:padding="10dp"
                    android:clickable="true"
                    app:cardCornerRadius="10dp"
                    android:background="#FD6D3A"
                    android:foreground="?android:selectableItemBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:background="#FD6D3A">
                        <ImageView
                            android:layout_marginTop="20dp"
                            android:layout_width="94dp"
                            android:layout_height="94dp"
                            android:src="@drawable/dr"

                            android:layout_gravity="center"
                            android:background="#FD6D3A"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginTop="3dp"
                            android:text="Find a Doctor"
                            android:textColor="#fcfcfc"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:padding="10dp"
                    android:clickable="true"
                    app:cardCornerRadius="10dp"
                    android:background="#6B9491"
                    android:foreground="?android:selectableItemBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:background="#6B9491">
                        <ImageView
                            android:layout_marginTop="20dp"
                            android:layout_width="94dp"
                            android:layout_height="94dp"
                            android:src="@drawable/ic_location"

                            android:layout_gravity="center"
                            android:background="#6B9491"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginTop="3dp"
                            android:text="Find a Location"
                            android:textColor="#fcfcfc"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_nav"></FrameLayout>
        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:menu="@menu/bottom_navigation"
            android:background="?android:attr/windowBackground"></android.support.design.widget.BottomNavigationView>
    </RelativeLayout>

</android.support.v7.widget.LinearLayoutCompat>